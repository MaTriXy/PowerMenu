<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="15dp"
  android:orientation="vertical"
  app:layout_behavior="@string/appbar_scrolling_view_behavior">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:padding="5dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/profile1"
          android:layout_width="65dp"
          android:layout_height="65dp"
          android:layout_margin="10dp"
          android:onClick="onAlert"
          android:scaleType="fitXY"
          android:src="@drawable/face2"
          app:shapeAppearanceOverlay="@style/CircleImageStyle" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/profile1"
          android:fontFamily="sans-serif"
          android:text="Grace"
          android:textColor="@color/md_grey_800"
          android:textSize="20sp"
          android:textStyle="bold" />

        <ImageView
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_alignParentEnd="true"
          android:layout_margin="10dp"
          android:onClick="onShare"
          android:src="@drawable/icon_share" />
      </RelativeLayout>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="4"
        android:text="@string/board1"
        android:textColor="@color/md_grey_600"
        android:textSize="15sp" />

    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:elevation="5dp"
    android:padding="5dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/profile2"
          android:layout_width="65dp"
          android:layout_height="65dp"
          android:layout_margin="10dp"
          android:onClick="onDialog"
          android:scaleType="fitXY"
          android:src="@drawable/face1"
          app:shapeAppearanceOverlay="@style/CircleImageStyle" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/profile2"
          android:fontFamily="sans-serif"
          android:text="Amelia"
          android:textColor="@color/md_grey_800"
          android:textSize="20sp"
          android:textStyle="bold" />

        <ImageView
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_alignParentEnd="true"
          android:layout_margin="10dp"
          android:onClick="onShare"
          android:src="@drawable/icon_share" />
      </RelativeLayout>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="4"
        android:text="@string/board2"
        android:textColor="@color/md_grey_600"
        android:textSize="15sp" />

    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:elevation="5dp"
    android:padding="5dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/profile3"
          android:layout_width="65dp"
          android:layout_height="65dp"
          android:layout_margin="10dp"
          android:onClick="onCustomDialog"
          android:scaleType="fitXY"
          android:src="@drawable/face3"
          app:shapeAppearanceOverlay="@style/CircleImageStyle" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/profile3"
          android:fontFamily="sans-serif"
          android:text="Sophie"
          android:textColor="@color/md_grey_800"
          android:textSize="20sp"
          android:textStyle="bold" />

        <ImageView
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_alignParentEnd="true"
          android:layout_margin="10dp"
          android:onClick="onShare"
          android:src="@drawable/icon_share" />
      </RelativeLayout>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="4"
        android:text="@string/board3"
        android:textColor="@color/md_grey_600"
        android:textSize="15sp" />

    </LinearLayout>
  </androidx.cardview.widget.CardView>

</LinearLayout>
